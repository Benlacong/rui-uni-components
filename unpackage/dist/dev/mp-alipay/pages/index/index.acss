
.rui-flex-list{
	display: -webkit-flex;
	display: -webkit-box;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	/* flex-wrap: wrap; */
	padding:20rpx;
	text-align: left;
	font-size: 30rpx;
	border-bottom: 1px solid #eee;
}
.rui-flex-left{
	-webkit-box-flex: 1;
	-webkit-flex-grow: 1;
	    -ms-flex-positive: 1;
	        flex-grow: 1;
}
.rui-line-clamp{
	overflow:hidden;
	-o-text-overflow:ellipsis;
	   text-overflow:ellipsis;
	display:-webkit-box;
	-webkit-box-orient:vertical;
}
.rui-li-more{
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 auto;
      -ms-flex: 0 0 auto;
          flex: 0 0 auto;
  position:relative;
  /* text-align:right; */
  color:#495060;
}
.rui-li-more{
  padding-right:13px
}
.rui-li-more::after{
  content:" ";
  display:inline-block;
  width:6px;
  height:6px;
  position:absolute;
  top:50%;
  right:2px;
  border-width:2px 2px 0 0;
  border-color:#aaa;
  border-style:solid;
  -webkit-transform:translateY(-50%) matrix(.71,.71,-.71,.71,0,0);
      -ms-transform:translateY(-50%) matrix(.71,.71,-.71,.71,0,0);
          transform:translateY(-50%) matrix(.71,.71,-.71,.71,0,0)
}

